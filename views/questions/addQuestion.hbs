{{!-- Aqui há o formulário para se adicionar uma nova questão 
ao banco de dados. Ele receberá cada uma das ropriedades 
necessárias e enviará como metodo "post" para o indexRoutes --}}
<h1>{{title}}</h1>
<h5>Please, enter the required data bellow in each field to create a new question in the questions database</h5>



<form action="/queryquestion" method="GET">

  <div class="form-group">
      <select id="inputSubject" class="form-control" name="subject" onchange="this.form.submit()">
          {{#each subject}}
              <option value="{{this}}">{{this}}</option>
          {{/each}}
      </select>

      {{#if classs}}
        <select id="inputClass" class="form-control" name="classs" onchange="this.form.submit()">
            {{#each classs}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
      {{/if}}

      {{#if topic}}
        <select id="inputTopic" class="form-control" name="topic" onchange="this.form.submit()">
            {{#each topic}}
                <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
      {{/if}}


  </div>
  <a href="/queryquestion" class="pb-2 mb-2 btn btn-info" role="button">Reload</a>

  </form>

  {{#if myBool}}

    <form action="/queryquestion" method="POST">

      {{#if topic}}
        {{#each topic}}
                <input class="form-control invisible" name="topic" type="text" value="{{this}}"></input>
        {{/each}}
      {{/if}}

      <label>Question</label>
      <h1>{{question}}</h1>
      {{#if question}}
        <textarea type="text" name="question" rows="4" class="form-control" value="{{question}}">{{question}}</textarea>
      {{else}}
        <textarea type="text" name="question" rows="4" class="form-control" value="{{question}}">{{question}}</textarea>
      {{/if}}
      
      {{#if question}}
      {{> errorPartial question}}
      {{/if}}

      <label>Correct Answer</label>
      <input class="form-control" type="text" name="correctAnswer" >
      {{#if correctAnswer}}
      {{> errorPartial correctAnswer}}
      {{/if}} 
    
      <label>Wrong Answer</label>
      <input class="form-control" type="text" name="wrongAnswer">
      {{#if  wrongAnswers}}
      {{> errorPartial  wrongAnswers}}
      {{/if}} 

      <label>Wrong Answer</label>
      <input class="form-control" type="text" name="wrongAnswer">
      {{#if  wrongAnswers}}
      {{> errorPartial  wrongAnswers}}
      {{/if}} 

      <label>Wrong Answer</label>
      <input class="form-control" type="text" name="wrongAnswer">
      {{#if  wrongAnswers}}
      {{> errorPartial  wrongAnswers}}
      {{/if}} 

      
      <button type="submit">Salvar</button>
      {{#if errorMessage}}
      {{> errorPartial errorMessage}}
      {{/if}}

    </form>

  {{/if}}

  
