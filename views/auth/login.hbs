  
{{!-- View do formulario de criacao de usuario --}}

{{!-- Dispara uma requisicao POST para a rota /signup quando o usuario clicar no botao "Salvar" --}}



<form class="form-signin" action="/login" method="POST">
  <div class="d-flex justify-content-center mb-0 pb-0">
    <img class="mb-0 pb-0" src="/images/image.png" alt="" width="72" height="72">
  </div>
  <h3 class="d-flex justify-content-center pb-0  mb-3 font-weight-normal">Please sign in</h3>
  
  <label class="sr-only">Email</label>
  <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address">

  <label class="sr-only">Password</label>
  <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password">

  <button type="submit">Login</button>
  {{#if errorMessage}}
  {{> errorPartial errorMessage}}
  {{/if}}
</form>

